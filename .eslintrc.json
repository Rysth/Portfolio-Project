{
	"env": {
		"browser": true,
		"es6": true,
		"jest": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"extends": ["airbnb-base"],
	"rules": {
		"indent": 0,
		"linebreak-style:": ["error", "windows"],
		"no-shadow": "off",
		"no-param-reassign": "off",
		"eol-last": "off",
		"no-tabs": "off",
		"import/extensions": [
			1,
			{
				"js": "always",
				"json": "always"
			}
		]
	},
	"ignorePatterns": ["dist/", "build/"]
}

